<section class="hero">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        <i class="fa fa-book"></i> Bonjour <%= current_user.name %>
      </h1>
      <h2 class="subtitle">
        Voici votre liste de lecture
      </h2>
    </div>
  </div>
</section>

  <% if @library_books.exists? %>
    <div class="book-grid">
      <%= render @library_books, book: @book %>
    </div>
  <% else %>
  <article class="message">
    <div class="message-body">Vous n'avez ajouté aucune oeuvre à votre espace <%= link_to "Trouver une oeuvre", root_path %>.</div>
  </article>
  <% end %>

</section>