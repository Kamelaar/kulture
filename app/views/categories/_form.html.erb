<%= simple_form_for @category, html: { multipart: true } do |form| %>
<%= form.error_notification %>
<%= form.error_notification message: form.object.errors[:base].to_sentence if form.object.errors[:base].present? %>

  <div class="field">
    <div class="control">
    <%= form.input :name, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" }, label: 'Nom'%>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= form.input :desc, required: true, autofocus: true, input_html: { class: "textarea"}, wrapper: false, label_html: { class: "label" }, label: 'Description' %>
    </div>
  </div> <br />
      <%= form.submit 'Valider', class:"button is-dark" %> <%= link_to 'Retour', categories_path, class:"button is-light" %>

<% end %>
